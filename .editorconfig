; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org


 ; A search for .editorconfig files will stop
 ; if the root filepath is reached or an
 ; EditorConfig file with root=true is found.
root = true

; * matches any string of characters except
; path separators (/) and is the default
; applied to all file types
[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

; override the * end_of_line setting for .bat files
[*.bat]
end_of_line = crlf

[*.yml]
indent_style = space
indent_size = 2
